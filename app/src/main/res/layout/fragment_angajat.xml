<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InterfataGraficaUtilizator.angajat.AngajatFragment">

    <LinearLayout
        android:id="@+id/linearLayoutAngajat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/title_angajat"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button
                android:id="@+id/adaugaAngajatNou"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Update" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginVertical="5dp"
            android:text="Nume" />


        <EditText
            android:id="@+id/nume_angajat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:background="@drawable/input_border"
            android:editable="false"
            android:ems="10"
            android:hint="Nume"
            android:inputType="text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginVertical="5dp"
            android:text="Prenume" />

        <EditText
            android:id="@+id/prenume_angajat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:background="@drawable/input_border"
            android:ems="10"
            android:hint="Prenume"
            android:inputType="text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginVertical="5dp"
            android:text="CNP" />

        <EditText
            android:id="@+id/cnp_angajat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:background="@drawable/input_border"
            android:ems="10"
            android:hint="CNP"
            android:inputType="date" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginVertical="5dp"
            android:text="Telefon" />

        <EditText
            android:id="@+id/telefon_angajat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:background="@drawable/input_border"
            android:ems="10"
            android:hint="Telefon"
            android:inputType="number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginVertical="5dp"
            android:text="Email" />

        <EditText
            android:id="@+id/email_angajat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:background="@drawable/input_border"
            android:ems="10"
            android:hint="Email"
            android:inputType="text" />

        <Button
            android:id="@+id/adaugaAngajat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adauga angajat" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/angajati_existenti"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutAngajat"
        tools:layout_editor_absoluteX="10dp" />

</androidx.constraintlayout.widget.ConstraintLayout>