<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InterfataGraficaUtilizator.resursa.ResursaFragment">

    <LinearLayout
        android:id="@+id/linearLayoutResursa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/title_resursa"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button
                android:id="@+id/adaugaResursaNoua"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Update" />

        </LinearLayout>

        <EditText
            android:id="@+id/numeResursa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:background="@drawable/input_border"
            android:editable="false"
            android:ems="10"
            android:hint="Nume"
            android:inputType="text" />

        <EditText
            android:id="@+id/cantitateResursa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:background="@drawable/input_border"
            android:ems="10"
            android:hint="Cantitate"
            android:inputType="number" />

        <EditText
            android:id="@+id/sesiuneResursa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:background="@drawable/input_border"
            android:ems="10"
            android:hint="Sesiune"
            android:inputType="text" />

        <EditText
            android:id="@+id/resursaRaport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:background="@drawable/input_border"
            android:ems="10"
            android:hint="Raport"
            android:inputType="text" />

        <EditText
            android:id="@+id/tipRersursa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:background="@drawable/input_border"
            android:ems="10"
            android:hint="Tip"
            android:inputType="text" />

        <EditText
            android:id="@+id/cursResursa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:background="@drawable/input_border"
            android:ems="10"
            android:hint="Curs"
            android:inputType="text" />

        <Button
            android:id="@+id/adaugaResursa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adauga resursa" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/resurse_existente"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutResursa"
        tools:layout_editor_absoluteX="10dp" />


</androidx.constraintlayout.widget.ConstraintLayout>